@{
    Layout = "HomeLayout";
    ViewData["Title"] = "Cuenta Personal | Banco PNT";
}

@model MVCBasico.Models.Cuenta;


    <link href="~/css/styleCuenta.css" rel='stylesheet'>
    <main>
        <h1>Cuenta Bancaria</h1>
        <div class="contenedor">
            <div class="caja-ahorro">
                <h2>Caja de Ahorro en Pesos</h2>
                <div class="info">
                    <p class="num-cuenta">N°@Model.id</p>
                    <p class="saldo">@Html.DisplayFor(model => model.Saldo)</p>
                    <p class="num-cuenta">Alias: @Model.Alias</p>
                </div>
            </div>
    </main>